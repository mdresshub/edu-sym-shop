{% extends 'base.html.twig' %}

{% block title %}Menükarte | Home{% endblock %}

{% block body %}

    <!-- Hero section -->
    <section class="hero-section">
        <div class="hero-slider owl-carousel">
            <div class="hs-item">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="hs-text">
                                <h2><span>{{ gericht1.name }} </span> vom Feinsten.</h2>
                                <p>Probieren Sie jetzt: {{ gericht1.beschreibung }} für nur {{ gericht1.preis }} EUR</p>
                                <a href="{{ path('app_menue') }}" class="site-btn">Menükarte</a>
                                <a href="{{ path('app_bestellen', {id: gericht1.id}) }}" class="site-btn sb-c2">Bestellen</a>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="hr-img">
                                <img src="{{ asset('bilder/' ~ gericht1.bild) }}" alt="">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="hs-item">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="hs-text">
                                <h2><span>{{ gericht2.name }} </span> vom Feinsten.</h2>
                                <p>Probieren Sie jetzt: {{ gericht2.beschreibung }} für nur {{ gericht2.preis }} EUR</p>
                                <a href="{{ path('app_menue') }}" class="site-btn">Menükarte</a>
                                <a href="{{ path('app_bestellen', {id: gericht1.id}) }}" class="site-btn sb-c2">Bestellen</a>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="hr-img">
                                <img src="{{ asset('bilder/' ~ gericht2.bild) }}" alt="">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Hero section end -->

{% endblock %}
